<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.AppraiseDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Appraise" id="AppraiseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="eid" column="eid" jdbcType="INTEGER"/>
        <result property="appdate" column="appDate" jdbcType="OTHER"/>
        <result property="appresult" column="appResult" jdbcType="VARCHAR"/>
        <result property="appcontent" column="appContent" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AppraiseMap">
        select
          id, eid, appDate, appResult, appContent, remark
        from vhr.appraise
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AppraiseMap">
        select
          id, eid, appDate, appResult, appContent, remark
        from vhr.appraise
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AppraiseMap">
        select
          id, eid, appDate, appResult, appContent, remark
        from vhr.appraise
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="eid != null">
                and eid = #{eid}
            </if>
            <if test="appdate != null">
                and appDate = #{appdate}
            </if>
            <if test="appresult != null and appresult != ''">
                and appResult = #{appresult}
            </if>
            <if test="appcontent != null and appcontent != ''">
                and appContent = #{appcontent}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.appraise(eid, appDate, appResult, appContent, remark)
        values (#{eid}, #{appdate}, #{appresult}, #{appcontent}, #{remark})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.appraise
        <set>
            <if test="eid != null">
                eid = #{eid},
            </if>
            <if test="appdate != null">
                appDate = #{appdate},
            </if>
            <if test="appresult != null and appresult != ''">
                appResult = #{appresult},
            </if>
            <if test="appcontent != null and appcontent != ''">
                appContent = #{appcontent},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.appraise where id = #{id}
    </delete>

</mapper>