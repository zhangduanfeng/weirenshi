<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.OplogDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Oplog" id="OplogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="adddate" column="addDate" jdbcType="OTHER"/>
        <result property="operate" column="operate" jdbcType="VARCHAR"/>
        <result property="hrid" column="hrid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OplogMap">
        select
          id, addDate, operate, hrid
        from vhr.oplog
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OplogMap">
        select
          id, addDate, operate, hrid
        from vhr.oplog
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OplogMap">
        select
          id, addDate, operate, hrid
        from vhr.oplog
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="adddate != null">
                and addDate = #{adddate}
            </if>
            <if test="operate != null and operate != ''">
                and operate = #{operate}
            </if>
            <if test="hrid != null">
                and hrid = #{hrid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.oplog(addDate, operate, hrid)
        values (#{adddate}, #{operate}, #{hrid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.oplog
        <set>
            <if test="adddate != null">
                addDate = #{adddate},
            </if>
            <if test="operate != null and operate != ''">
                operate = #{operate},
            </if>
            <if test="hrid != null">
                hrid = #{hrid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.oplog where id = #{id}
    </delete>

</mapper>