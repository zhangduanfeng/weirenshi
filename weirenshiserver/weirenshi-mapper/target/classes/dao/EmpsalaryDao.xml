<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.EmpsalaryDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Empsalary" id="EmpsalaryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="eid" column="eid" jdbcType="INTEGER"/>
        <result property="sid" column="sid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmpsalaryMap">
        select
          id, eid, sid
        from vhr.empsalary
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmpsalaryMap">
        select
          id, eid, sid
        from vhr.empsalary
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EmpsalaryMap">
        select
          id, eid, sid
        from vhr.empsalary
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="eid != null">
                and eid = #{eid}
            </if>
            <if test="sid != null">
                and sid = #{sid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.empsalary(eid, sid)
        values (#{eid}, #{sid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.empsalary
        <set>
            <if test="eid != null">
                eid = #{eid},
            </if>
            <if test="sid != null">
                sid = #{sid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.empsalary where id = #{id}
    </delete>

</mapper>