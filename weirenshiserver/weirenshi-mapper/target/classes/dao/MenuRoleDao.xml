<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.MenuRoleDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.MenuRole" id="MenuRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MenuRoleMap">
        select
          id, mid, rid
        from vhr.menu_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MenuRoleMap">
        select
          id, mid, rid
        from vhr.menu_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MenuRoleMap">
        select
          id, mid, rid
        from vhr.menu_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.menu_role(mid, rid)
        values (#{mid}, #{rid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.menu_role
        <set>
            <if test="mid != null">
                mid = #{mid},
            </if>
            <if test="rid != null">
                rid = #{rid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.menu_role where id = #{id}
    </delete>

</mapper>