<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.EmployeetrainDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Employeetrain" id="EmployeetrainMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="eid" column="eid" jdbcType="INTEGER"/>
        <result property="traindate" column="trainDate" jdbcType="OTHER"/>
        <result property="traincontent" column="trainContent" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmployeetrainMap">
        select
          id, eid, trainDate, trainContent, remark
        from vhr.employeetrain
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmployeetrainMap">
        select
          id, eid, trainDate, trainContent, remark
        from vhr.employeetrain
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EmployeetrainMap">
        select
          id, eid, trainDate, trainContent, remark
        from vhr.employeetrain
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="eid != null">
                and eid = #{eid}
            </if>
            <if test="traindate != null">
                and trainDate = #{traindate}
            </if>
            <if test="traincontent != null and traincontent != ''">
                and trainContent = #{traincontent}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.employeetrain(eid, trainDate, trainContent, remark)
        values (#{eid}, #{traindate}, #{traincontent}, #{remark})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.employeetrain
        <set>
            <if test="eid != null">
                eid = #{eid},
            </if>
            <if test="traindate != null">
                trainDate = #{traindate},
            </if>
            <if test="traincontent != null and traincontent != ''">
                trainContent = #{traincontent},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.employeetrain where id = #{id}
    </delete>

</mapper>