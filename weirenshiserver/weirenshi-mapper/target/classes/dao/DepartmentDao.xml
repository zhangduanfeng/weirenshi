<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.DepartmentDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Department" id="DepartmentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentid" column="parentId" jdbcType="INTEGER"/>
        <result property="deppath" column="depPath" jdbcType="VARCHAR"/>
        <result property="enabled" column="enabled" jdbcType="OTHER"/>
        <result property="isparent" column="isParent" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select
          id, name, parentId, depPath, enabled, isParent
        from vhr.department
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select
          id, name, parentId, depPath, enabled, isParent
        from vhr.department
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DepartmentMap">
        select
          id, name, parentId, depPath, enabled, isParent
        from vhr.department
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="parentid != null">
                and parentId = #{parentid}
            </if>
            <if test="deppath != null and deppath != ''">
                and depPath = #{deppath}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
            <if test="isparent != null">
                and isParent = #{isparent}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.department(name, parentId, depPath, enabled, isParent)
        values (#{name}, #{parentid}, #{deppath}, #{enabled}, #{isparent})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.department
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="parentid != null">
                parentId = #{parentid},
            </if>
            <if test="deppath != null and deppath != ''">
                depPath = #{deppath},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            <if test="isparent != null">
                isParent = #{isparent},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.department where id = #{id}
    </delete>

</mapper>