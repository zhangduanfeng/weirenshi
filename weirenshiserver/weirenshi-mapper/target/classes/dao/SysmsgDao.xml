<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gusubaiyi.weirenshi.dao.SysmsgDao">

    <resultMap type="com.gusubaiyi.weirenshi.entity.Sysmsg" id="SysmsgMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="hrid" column="hrid" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysmsgMap">
        select
          id, mid, type, hrid, state
        from vhr.sysmsg
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysmsgMap">
        select
          id, mid, type, hrid, state
        from vhr.sysmsg
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysmsgMap">
        select
          id, mid, type, hrid, state
        from vhr.sysmsg
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="hrid != null">
                and hrid = #{hrid}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.sysmsg(mid, type, hrid, state)
        values (#{mid}, #{type}, #{hrid}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.sysmsg
        <set>
            <if test="mid != null">
                mid = #{mid},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="hrid != null">
                hrid = #{hrid},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vhr.sysmsg where id = #{id}
    </delete>

</mapper>